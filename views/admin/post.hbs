<div class="wrapper">
  <div class="wrap-header">
    <h3>{{title}}</h3>
  </div>
  <form method="post" action="/api/admin/movie/set">
    <input type="hidden" name="movie[id]" value="{{movie.id}}">
    <ul>
      <li><label>标题：</label><input type="text" name="movie[title]" value="{{movie.title}}"></li>
      <li><label>导演：</label><input type="text" name="movie[doctor]" value="{{movie.doctor}}"></li>
      <li><label>演员：</label><input type="text" name="movie[actor]" value="{{movie.actor}}"></li>
      <li><label>制片厂：</label><input type="text" name="movie[studio]" value="{{movie.studio}}"></li>
      <li><label>语言：</label><input type="text" name="movie[language]" value="{{movie.language}}"></li>
      <li><label>国家：</label><input type="text" name="movie[country]" value="{{movie.country}}"></li>
      <li><label>年份：</label><input type="text" name="movie[year]" value="{{movie.year}}"></li>
      <li><label>片长：</label><input type="text" name="movie[long]" value="{{movie.long}}"></li>
      <li><label>简介：</label><input type="text" name="movie[summary]" value="{{movie.summary}}"></li>
      <li><label>视频地址：</label><input type="text" name="movie[flash]" value="{{movie.flash}}"></li>
      <li><label>海报：</label><input type="text" name="movie[poster]" value="{{movie.poster}}"></li>
      <li><label>题图：</label><input type="text" name="movie[drawings]" value="{{movie.drawings}}"></li>
      <li><label>上传者：</label><input type="text" name="movie[uploader]" value="{{movie.uploader}}"></li>
      <li><label>上传类型：</label><label><input type="radio" name="movie[type]" {{#if movie.type}}{{#equals movie.type 1}}checked="checked"{{/equals}}{{else}}checked="checked"{{/if}} value="1">普通</label><label><input type="radio" name="movie[type]" {{#equals movie.type 2}}checked="checked"{{/equals}} value="2">专题</label></li>
    </ul>
    <input type="submit" value="{{#if movie}}保存{{else}}添加{{/if}}">
  </form>
</div>
